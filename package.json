    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.3.3",
    "@semantic-release/release-notes-generator": "14.0.1",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "semantic-release": "24.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "camel-case",
          "pascal-case"
        ]
      ]
    }
  },
  "engines": {
    "node": "20.x"
  }
